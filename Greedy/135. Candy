class Solution {
    public int candy(int[] ratings) {
        int n = ratings.length;
        int i=1;
        int ans = 1;
        while(i<n){
            if(ratings[i]==ratings[i-1]){
                i++;
                ans++;
                continue;
            }
            int peak = 1;
            while(i<n && ratings[i]>ratings[i-1]){
                i++;
                peak++;
                ans+=peak;
            }
            int down = 1;
            while(i<n && ratings[i]<ratings[i-1]){
                i++;
                ans+=down;
                down++;
            }
            if(down>peak) ans+=down-peak;
        }
        return ans;
    }
}
