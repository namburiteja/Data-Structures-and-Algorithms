class Solution {
    int minCost(int[] height) {
        int n = height.length;
        int[] memo = new int[n];
        memo[0] = 0;
        if(n>1) memo[1] = Math.abs(height[1] - height[0]);
        for(int i=2;i<n;i++){
            int left = memo[i-1] + Math.abs(height[i] - height[i-1]);
            int right = memo[i-2] + Math.abs(height[i] - height[i-2]);
            memo[i] = Math.min(left,right);
        }
        return memo[n-1];
    }
}
TIME COMPLEXITY - O(n)
SPACE COMPLEXITY - O(n)
