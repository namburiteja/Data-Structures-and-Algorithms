class Solution { 
    public int minSum(int[][] grid,int i,int j,int[][] dp){
        if (j < 0 || j >= grid[0].length) return (int)1e9;
        if(i==0) return dp[i][j] = grid[i][j];
        if(dp[i][j]!=Integer.MAX_VALUE) return dp[i][j];
        int left = Integer.MAX_VALUE;
        int right = Integer.MAX_VALUE;
        int up = grid[i][j] + minSum(grid,i-1,j,dp);
        if(j-1>=0) left = grid[i][j] + minSum(grid,i-1,j-1,dp);
        if(j+1 < grid[0].length) right = grid[i][j] + minSum(grid,i-1,j+1,dp);
        return dp[i][j] = Math.min(up,Math.min(left,right));
    } 
    public int minFallingPathSum(int[][] matrix) {
        int n = matrix.length;
        int mini = Integer.MAX_VALUE;
        int[][] dp = new int[n][n];
        for(int i=0;i<n;i++) Arrays.fill(dp[i],Integer.MAX_VALUE);
        for(int i=0;i<n;i++){
            int ans = minSum(matrix,n-1,i,dp);
            mini = Math.min(ans,mini);
        }
        return mini;
    }
}
TIME COMPLEXITY - O(m*n)
SPACE COMPLEXITY - O(m*n)
