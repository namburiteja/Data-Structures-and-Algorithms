class Solution {
    public boolean canBeParted(int[] arr,int i,int target,int[][] memo){
        if(target==0){
            memo[i][target] = 1;
            return true;
        }
        if(i==0){
            memo[i][target] = (target==arr[i]) ? 1 : 0;
            return target==arr[i];
        }
        if(memo[i][target]!=-1) return (memo[i][target]==1);
        boolean nottake = canBeParted(arr,i-1,target,memo);
        boolean take = false;
        if(target>=arr[i]) take = canBeParted(arr,i-1,target-arr[i],memo);
        memo[i][target] = (take || nottake) ? 1 : 0;
        return take || nottake;
    }
    public boolean canPartition(int[] nums) {
        int s=0;
        int n = nums.length;
        for(int i=0;i<n;i++) s+=nums[i];
        if(s%2!=0) return false;
        int[][] memo = new int[n][s/2+1];
        for(int i=0;i<n;i++) for(int j=0;j<s/2+1;j++) memo[i][j] = -1;
        return canBeParted(nums,n-1,s/2,memo);
    }
}
TIME COMPLEXITY - O(n*target)
SPACE COMPLEXITY - O(n*target) + O(n)
